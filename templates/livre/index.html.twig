{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block h1 %}Liste des livres{% endblock %}

{% block body %}
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Couverture</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{livre.id}}</td>
                    <td>
                        <img class="mini" src="{{asset("img/" ~ livre.couverture) }}" alt="Couverture du livre {{livre.titre}}">
                    </td>
                    <td>{{livre.titre}}</td>
                    <td>{{livre.auteur}}</td>
                    <td>
                    <a href=" {{path("livre_detail", {"id": livre.id }) }}"class="btn btn-outline-info">Voir</a>
                    <a href=" {{path("livre_modifier", {"id": livre.id }) }}"class="btn btn-outline-info">Modifier</a>
                    <a href="{{path("livre_supprimer", {"id": livre.id}) }}"class="btn btn-outline-info">Supprimer</a>
                    </td>
                  </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
